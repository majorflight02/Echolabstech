<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Tremec.tremec.app"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.Tremec.tremec.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Introduction"
            android:label="@string/title_activity_introduction"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Instructions"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Step"
            android:label="@string/title_activity_step"
            android:screenOrientation="fullSensor"
            >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Step2"
            android:label="@string/title_activity_step2"
            android:screenOrientation="fullSensor"
            >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Step3"
            android:label="@string/title_activity_step3"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Results"
            android:label="@string/title_activity_results"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.HTMLView"
            android:label="@string/title_activity_htmlview" >
        </activity>
        <activity
            android:name="com.Tremec.tremec.app.Diagram"
            android:label="@string/title_activity_diagram" >
        </activity>
    </application>

</manifest>
